<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_alignBottom="@+id/txtVw"
        android:layout_toRightOf="@+id/txtVw"
        android:entries="@array/units"
        />


    <TextView
        android:id="@+id/txtVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="150dp"
        android:text="@string/conversion"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!--   Value user wants to convert to-->
    <TextView
        android:id="@+id/TextView_to"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="201dp"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

<!--   User enters a Value-->
    <EditText
        android:id="@+id/EditTextEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="186dp"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:ems="10"
        android:inputType="numberDecimal"
        />



    <!--   Value user wants to convert from-->
    <TextView
        android:id="@+id/TextView_from"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="247dp"
        android:entries="@array/units"

        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!--  Displays converted value-->
    <TextView
        android:id="@+id/TextViewEquals"
        android:clickable="false"
        android:focusable="false"
        android:cursorVisible="false"
        android:focusableInTouchMode="false"
        android:layout_width="91dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="247dp"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp" />

</RelativeLayout>